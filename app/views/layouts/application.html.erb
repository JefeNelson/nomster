<!DOCTYPE html>
<html>
  <head>
    <title>Nomster</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <!--Fancy Navigation Bar-->
  <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
      <!--<a class="navbar-brand" href="#">Nomster</a>-->
      <%= link_to 'Nomster', root_path, class: 'navbar-brand' %> 
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
        <li class="nav-item">
          <%= link_to new_place_path, class: 'nav-link' do %>     <!--New Place Link (start)-->
            <i class="fa fa-plus-circle"></i>
            New Place
          <% end %>                                               <!--New Place Link (end)-->
        </li>
      </ul>
    </div>
  </nav>
  <!--Fancy Navigation Bar(end)-->

  <% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>                   <!--Notification Bar under TopNav-->
  <% end %>
  <% if alert.present? %>
  <p class="alert alert-danger"><%= alert %></p>                  <!--Alert Bar under TopNav-->
  <% end %>
  
  <%= yield %>

  </body>
</html>
